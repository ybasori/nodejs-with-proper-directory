<%- include(layout + '/start', { title: 'Articles' }) %>
    <meta name="csrf-token" content="<%= csrfToken %>">
<%- include(layout + '/content') %>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-3">
                    <a href="<%= linkTo.createArticle %>" class="btn btn-secondary">New</a>
                </div>
            </div>
            <% articles.forEach( article =>{ %>
            <hr>
            <div class="row">
                <div class="col-md-3"><%= article.title %></div>
                <div class="col-md-3">
                        <a href="<%= linkTo.listArticle %>/<%= article.id %>" class="btn btn-secondary">Edit</a>
                        <button type="button" class="btn btn-secondary btn-delete" data-id="<%= article.id %>">Delete</button>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
<%- include(layout + '/script') %>
<script>
    (function(){
        $(".btn-delete").on("click", function(){
            var id = $(this).data('id');
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        url: "<%= linkTo.listArticle %>/"+id,
                        type: "DELETE",
                        data: (function(){
                            var formdata = new FormData();
                            formdata.append("_csrf","<%= csrfToken %>");
                            return formdata;
                        })(),
                        contentType: false,
                        cache: false,
                        processData: false,
                        beforeSend: function(){
                            Swal.showLoading();
                        },
                        success: function(data){
                                Swal.fire({
                                    type: 'success',
                                    title: 'Your work has been saved',
                                    showConfirmButton: false,
                                    timer: 1500
                                }).then(function(){
                                    window.location.reload();
                                });
                        },
                        error: function(xhr){
                            Swal.fire({
                                type: 'error',
                                title: 'Oops...',
                                text: 'Something went wrong!',
                                footer: '<a href>Why do I have this issue?</a>'
                            });
                        }
                    });
                }
            });
        });
    })();
</script>
<%- include(layout + '/end') %>