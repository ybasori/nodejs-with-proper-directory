<%- include(layout + '/start', { title: 'Home' }) %>
    <meta name="csrf-token" content="<%= csrfToken %>">
<%- include(layout + '/content') %>
    <div class="row">
        <div class="col-md-12">
            <form id="form">
                <div class="row">
                    <div class="col-md-9">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group row">
                                            <label for="" class="col-md-3 col-form-label">Name</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control" id="" value="<%= (typeof profile != 'undefined') ? profile.name:'' %>" name="name">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="" class="col-md-3 col-form-label">Username</label>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control" id="" value="<%= (typeof profile != 'undefined') ? profile.username:'' %>" name="username">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-9 offset-md-3">
                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <button class="btn btn-primary" type="submit">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
<%- include(layout + '/script') %>
<script>
</script>
<%- include(layout + '/end') %></div>